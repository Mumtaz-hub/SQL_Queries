-- Find stores who's sales where better than the average sales accross all stores
--Steps
--1. Find totale sales for each store
--2. find avg sales for all the stores
--3. compare 1 and 2


select *
    from 
    ( 
          select store_name, sum (price) as total_sales
          from sales
          group_by store_name
    ) sales
  join ( select avg(total_sales) as sales
            from
            (
                select store_name, sum(price) as total_sales
                from sales
                group_by store_name
            ) x
           ) avg_sales
  on sales.total_sales > avg_sales.sales
  
  --- not the best way to write this query
  
  -- Modify tghis query using with clause
  
  with sales as
  (
    select store_name, sum(price) as total_sales
    from sales
    group_by store_name
  )
  Select *
  from sales
  join ( select avg(total_sales) as sales
            from
            sales x
           ) avg_sales
  on sales.total_sales > avg_sales.sales
